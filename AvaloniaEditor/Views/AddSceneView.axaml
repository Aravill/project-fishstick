<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" x:Class="AvaloniaEditor.Views.AddSceneView"
  xmlns:vm="using:AvaloniaEditor.ViewModels" x:DataType="vm:AddSceneViewModel">
  <DockPanel>
    <Button DockPanel.Dock="Bottom" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center">Cancel</Button>
    <Button DockPanel.Dock="Bottom" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center">OK</Button>
    <TextBox AcceptsReturn="True" Text="{Binding Description}" Watermark="Enter scene description"/>
  </DockPanel>
</UserControl>
